<Project Sdk="Microsoft.NET.Sdk">
    <ItemGroup>
        <EmbeddedResource Include="logo.png" />
        <EmbeddedResource Include="BazaarPlannerMod.dll" />
        <EmbeddedResource Include="BepInEx_win_x64_5.4.23.2.zip" />
    </ItemGroup>
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <DebugType>embedded</DebugType>
  </PropertyGroup>
  
  <Target Name="CopyCustomLauncherToPublish" AfterTargets="Publish">
    <Message Text="Copying customlauncher.bat and README to publish folder" Importance="high" />
    <Copy
            SourceFiles="../customlauncher.bat;../Readme-what is this.txt"
            DestinationFolder="$(PublishDir)"
            SkipUnchangedFiles="true" />
  </Target>
</Project>